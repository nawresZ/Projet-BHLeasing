@using static ProjetBHLeasing.Models.Client;
@model ProjetBHLeasing.Models.Client

@{
    ViewData["Title"] = "Create";
}
<partial name="_Notification" />


<h1>TCC</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="clientId" class="control-label">ID Client</label>
                <input asp-for="clientId" class="form-control" />
                <span asp-validation-for="clientId" class="text-danger"></span>
            </div>
            
            
            <div class="form-group">
                <label asp-for="resultats" class="control-label">Sort</label>
                <select asp-for="resultats" class="form-control">
                    <option value="">-- Select --</option>
                    @foreach (var enumName in Enum.GetNames(typeof(resultatsEnum)))
                    {
                        var status = (resultatsEnum)Enum.Parse(typeof(resultatsEnum), enumName);
                        var value = (int)status;
                        <option value="@value">@($"{value} - {enumName}")</option>
                    }
                </select>
                <span asp-validation-for="resultats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="observations" class="control-label">Observation</label>
                <input asp-for="observations" class="form-control" />
                <span asp-validation-for="observations" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="montant" class="control-label">Montant</label>
                <input asp-for="montant" class="form-control" />
                <span asp-validation-for="montant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dateReglement" class="control-label">Date Rendez-vous</label>
                <input asp-for="dateReglement" class="form-control" type="date" />
                <span asp-validation-for="dateReglement" class="text-danger"></span>
            </div>
            
            
            <div class="form-group">
                <input asp-for="idAction" type="hidden" value="1" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
