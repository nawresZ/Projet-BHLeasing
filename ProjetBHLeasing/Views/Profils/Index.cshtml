@model IEnumerable<ProjetBHLeasing.Models.Profil>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id_profil)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Designation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.b_systeme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.id_user_modif)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.date_user_creat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.date_user_modif)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id_profil)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Designation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.b_systeme)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.id_user_modif)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.date_user_creat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.date_user_modif)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id_profil">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.id_profil">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.id_profil">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>